{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react",
        "target": "es6",
        "allowJs": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2015",
            "es2015.collection",
            "es2016",
            "es2016.array.include",
            "es2017"
        ]
    },
    "include": [
        "./db/**/*",
        "./src/**/*"
    ]
}