{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react",
        "target": "es2015",
        "allowJs": true,
        "types": [
            "node",
            "mocha"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2015",
            "es2015.collection",
            "es2016",
            "es2016.array.include"
        ]
    },
    "include": [
        "./db/**/*.ts",
        "./src/**/*.ts",
        "./test/**/*.ts"
    ]
}